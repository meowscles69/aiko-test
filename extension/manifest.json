
{
  "manifest_version": 3,
  "name": "AikoOS Companion",
  "version": "1.0.0",
  "description": "Your playful anime-inspired AI companion.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "audio"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ]
}
